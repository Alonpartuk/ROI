# Octup Dashboard API - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# BigQuery Configuration
BIGQUERY_PROJECT_ID=octup-testing
BIGQUERY_DATASET=hubspot_data

# Google Cloud Authentication
# Option 1: Service Account Key File (recommended for local dev)
GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account-key.json

# Option 2: If running on GCP (Cloud Run, GCE, etc.), authentication is automatic
# No need to set GOOGLE_APPLICATION_CREDENTIALS

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# HubSpot Portal ID (for generating deal links)
HUBSPOT_PORTAL_ID=your-portal-id
